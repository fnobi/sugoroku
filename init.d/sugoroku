#!/usr/bin/env bash

start() {
    echo -n "Starting Sugoroku: "
    cd /var/www/sugoroku
    npm start
    return 0
}
stop() {
    echo -n "Starting Sugoroku: "
    cd /var/www/sugoroku
    npm stop
    return 0
}
restart() {
    start
    stop
    return 0
}
case "$1" in
  start)
    start
    ;;
  stop)
    stop
    ;;
  restart)
    restart
    ;;
esac
